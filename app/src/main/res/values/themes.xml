<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContactApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00a6b6 </item>
        <item name="colorPrimaryVariant">#5bd8e8</item>
        <item name="colorOnPrimary">#007786</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">#cc0000</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#393b3f</item>
        <item name="subtitleTextColor">#CCCCCC</item>

    </style>

    <style name="Theme.ContactApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ContactApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ContactApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>