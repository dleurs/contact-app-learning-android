<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContactApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/numerbly_medium_blue</item>
        <item name="colorPrimaryVariant">@color/numerbly_light_grey</item>
        <item name="colorOnPrimary">@color/white </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">#cc0000</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/numerbly_grey</item>
        <item name="android:cacheColorHint">@color/numerbly_light_grey</item>

    </style>

    <style name="Theme.TabLayout" parent="Widget.Design.AppBarLayout">
        <item name="tabIndicatorColor">@color/numerbly_clear_blue</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="Theme.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Theme.ContactApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.ContactApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ContactApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>